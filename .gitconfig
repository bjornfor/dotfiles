	email = bjorn.forsman@gmail.com

[core]
	editor = vim

[color]
	ui = auto

[alias]
	st = status
	df = diff
	ci = commit
	co = checkout
	wc = whatchanged
	br = branch
	f = fetch
	a = add
	l = log
	lga = log --graph --pretty=oneline --abbrev-commit --decorate --all
	rup = remote update -p

[sendemail]
	smtpserver = /usr/bin/msmtp

[diff "word"]
	textconv = antiword
[push]
	default = simple
