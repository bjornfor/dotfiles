# .offlineimaprc

# add this to crontab:
# 00 23 * * * offlineimap -u Noninteractive.Quiet

# or this:
# 00 23 * * * offlineimap -u Noninteractive.Basic

[general]
accounts = GMail

[Account GMail]
localrepository = MyLocal
remoterepository = MyRemote
#autorefresh = 10

[Repository MyLocal]
type = Maildir
localfolders = /home/bjornfor/raid/projects/email/gmail/maildir

[Repository MyRemote]
type = IMAP
maxconnections = 1
remotehost = imap.gmail.com
remoteuser = bjorn.forsman@gmail.com
ssl = yes
remoteuser = bjorn.forsman@gmail.com
remotepass = <password>
folderfilter = lambda foldername: foldername in ['INBOX', 'Sent']
#folderfilter = lambda foldername: foldername in ['INBOX', 'Sent', '[Google Mail]/All Mail']
#folderfilter = lambda foldername: foldername in ['INBOX', 'Sent', 'davinci-linux-mailing-list']
