# .offlineimaprc

# add this to crontab:
# 00 23 * * * offlineimap -u Noninteractive.Quiet

# or this:
# 00 23 * * * offlineimap -u Noninteractive.Basic

[general]
accounts = GMail

[Account GMail]
localrepository = MyLocal
remoterepository = MyRemote
#autorefresh = 10

[Repository MyLocal]
type = Maildir
localfolders = /home/bjornfor/raid/projects/email/gmail/maildir

[Repository MyRemote]
type = IMAP
remotehost = imap.gmail.com
